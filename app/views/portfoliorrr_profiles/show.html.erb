<h1>Perfil do Portfoliorr</h1>

<% if Invitation.find_by(profile_id: @profile['id']).nil? %>
  <%= form_with(model: @invitation, url: invitations_path, local: true) do |form| %>
    <%= form.hidden_field :profile_id, value: @profile['id'] %>

    <div class="mb-3">
      <%= form.label :due_date, 'Vencimento' %>
      <%= form.date_field :due_date %>
    </div>

    <div class="mb-3">
      <%= form.label :project_id, 'Projetos', class: 'form-label' %>
      <%= form.collection_select :project_id, @projects, :id, :title, :include_blank => true, class: 'form-control' %>
    </div>

    <%= form.submit 'Enviar convite' %>
  <% end %>
<% else %>
  <h2>Esse usu√°rio possui convite pendente</h2>
<% end %>
