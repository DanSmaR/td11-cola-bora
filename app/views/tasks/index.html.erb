<h1><%= Task.model_name.human %></h1>

<%= link_to 'Nova Tarefa', new_project_task_path(@project) %>
<ul>
  <% @tasks.each do |task| %>
    <li><h4><%= link_to task.title, project_task_path(@project, task) %>
    <span style="font-size: small;"><%= task.due_date if task.due_date %></span></h4></li>
  <% end %>
</ul>
