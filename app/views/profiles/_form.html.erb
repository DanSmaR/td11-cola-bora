<%= form_with model: profile do |f| %>
  <div>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </div>

  <div>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div>

  <div>
    <%= f.label :work_experience %>
    <%= f.text_area :work_experience %>
  </div>

  <div>
    <%= f.label :education %>
    <%= f.text_field :education %>
  </div>

  <div>
    <% if profile.first_update? %>
      <%= link_to t('skip'), root_path %>
      <%= f.submit t('helpers.submit.complete', model: Profile.model_name.human) %>
    <% else %>
      <%= link_to t('back'), profile_path(@profile) %>
      <%= f.submit t('helpers.submit.update', model: Profile.model_name.human) %>
    <% end %>
  </div>
<% end %>
