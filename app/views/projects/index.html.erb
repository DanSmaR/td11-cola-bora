<h1><%= Project.model_name.human(count: 2) %></h1>
<div class="nav-scroller py-1 mb-3 border-bottom">
  <nav class="nav nav-underline">
    <%= link_to 'Meus Projetos', projects_path, class: "nav-item nav-link link-body-emphasis" %>
  </nav>
</div>
<% if @projects.any? %>
  <% @projects.each do |project| %>
    <p>
      <strong><%= Project.human_attribute_name :title %>: </strong>
      <%= link_to project.title, project_path(project) %>
    </p>
    <p>
      <strong><%= Project.human_attribute_name :description %>: </strong>
      <%= project.description %>
    </p>
    <p>
      <strong><%= Project.human_attribute_name :category %>: </strong>
      <%= project.category %>
    </p>
  <% end %>
<% else %>
  <h3>NÃ£o existem projetos cadastrados.</h3>
<% end %>
